[core]
  editor=nvim
  autocrlf=input
  pager=delta

[alias]
  sm = submodule
  st = status
  dt = difftool
  d  = diff

[pull]
  ff=only

[diff]
  colorMoved=default
  tool = "nvimdiff"

[difftool]
  prompt=false

[difftool "nvimdiff"]
  cmd="nvim -d \"$LOCAL\" \"$REMOTE\""

[add.interactive]
  useBuiltin=false

[merge]
  conflictStyle=diff3

[mergetool "nvim"]
  cmd="nvim -f -c \"Gvdiffsplit!\" \"$MERGED\""

[interactive]
  diffFilter="delta --color-only --features=interactive"

[delta]
  navigate=true
  light=false
  features=decorations
  side-by-side = true

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax

